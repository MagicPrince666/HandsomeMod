/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"
#include <dt-bindings/input/input.h>
#include <dt-bindings/pwm/pwm.h>

/ {
    model = "Lichee Pi Zero With Dock";
    compatible = "licheepi,licheepi-zero-spinand", "licheepi,licheepi-zero", "allwinner,sun8i-v3s";

    aliases {
        serial0 = &uart0;
        ethernet0 = &emac;
        display0 = &panel;
        spi0 = &spi0;
    };

    chosen {
        stdout-path = "serial0:115200n8";
    };

    leds {
        /* The LEDs use PG0~2 pins, which conflict with MMC1 */
        compatible = "gpio-leds";
        status = "okay";

		lpwm {
			label = "lpwm";
			gpios = <&pio 6 2 GPIO_ACTIVE_HIGH>; // PG2
			default-state = "on";
		};

		rpwm {
			label = "rpwm";
			gpios = <&pio 6 3 GPIO_ACTIVE_HIGH>; // PG3
			default-state = "on";
		};

    };

    srf04@0 {
		compatible = "devantech,srf04";
		trig-gpios = <&pio 1 3 GPIO_ACTIVE_HIGH>; // PB3
		echo-gpios = <&pio 1 2 GPIO_ACTIVE_HIGH>; // PB2
        status = "disabled";
	};

    rotary: rotary-encoder {
		compatible = "rotary-encoder";
		gpios = <&pio 6 0 GPIO_ACTIVE_HIGH>, <&pio 6 1 GPIO_ACTIVE_HIGH>; //PG0 PG1
		linux,axis = <0>; /* REL_X */
		rotary-encoder,encoding = "gray";
		rotary-encoder,relative-axis;
	};

    pwm1-gpio {
		compatible = "pwm-gpio";
		#pwm-cells = <3>;
		pwm-gpio = <&pio 4 0 GPIO_ACTIVE_HIGH>; // PE0
	};

    backlight: backlight {
        compatible = "pwm-backlight";
        enable-gpios = <&pio 1 4 GPIO_ACTIVE_HIGH>; /* PB4 PWM0 */
		pwms = <&pwm 0 1000000 PWM_POLARITY_INVERTED>;
		brightness-levels = <0 30 40 50 60 70 100>;
		default-brightness-level = <6>;
        status = "disabled";
    };

    wifi_pwrseq: wifi_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&pio 6 5 GPIO_ACTIVE_LOW>; // PG5
		post-power-on-delay-ms = <200>;
	};

    panel: panel {
        compatible = "simple-panel","ampire,am-480272h3tmqw-t01h";
        #address-cells = <1>;
        #size-cells = <0>;
        status = "disabled";

        label = "lcd";
        pinctrl-names = "default";
        
        // power-supply = <&reg_vcc3v3>;
        // enable-gpios = <&axp_gpio 0 GPIO_ACTIVE_HIGH>; /* AXP GPIO0 */
        backlight = <&backlight>;

        port@0 {
            panel_input: endpoint {
                remote-endpoint = <&tcon0_out_lcd>;
            };
        };
    };
};

&mmc0 {
    broken-cd;
    bus-width = <4>;
    vmmc-supply = <&reg_vcc3v3>;
    status = "okay";
    mmc-pwrseq = <&wifi_pwrseq>;

    esp32: sdio_wifi@1 {
		compatible = "esp,esp32";
		reg = <1>;
		esp,crystal-26M-en = <2>;
	};
};

&mmc1 {
    broken-cd;
    bus-width = <4>;
    vmmc-supply = <&reg_vcc3v3>;
    status = "disabled";
};


&uart0 {
    pinctrl-0 = <&uart0_pins_a>;
    pinctrl-names = "default";
    status = "okay";
};

&uart1 {
    pinctrl-0 = <&uart1_pins_a>;
    pinctrl-names = "default";
    status = "okay";
};

&uart2 {
    pinctrl-0 = <&uart2_pins_a>;
    pinctrl-names = "default";
    status = "okay";
};

&usb_otg {
    dr_mode = "otg";
    status = "okay";
};

&usbphy {
    usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>; /* USB_ID PF6 */
    status = "okay";
};

&emac {
    phy-handle = <&int_mii_phy>;
    phy-mode = "mii";
    allwinner,leds-active-low;
	local-mac-address = [a4 51 29 00 00 08];
    status = "okay";
};

&pwm {
    pinctrl-names = "default";
    pinctrl-0 = <&pwm0_pins_a &pwm1_pins_a>;
    status = "okay";
};

&de {
    status = "okay";
};

&i2c0 {
	status = "okay";

	ns2009: ns2009@48 {
		compatible = "nsiway,ns2009";
		reg = <0x48>;
	};

    mpu6050@68 {
		compatible = "invensense,mpu6050";
		reg = <0x68>;
		status = "okay";
		interrupt-parent = <&pio>;
		interrupts = <6 4 IRQ_TYPE_EDGE_RISING>; // PG4
		orientation = <0xff 0 0 0 1 0 0 0 0xff>;
	};

    vl53l0x@29 {
		compatible = "st,vl53l0x";
		reg = <0x29>;
		interrupt-parent = <&pio>;
		interrupts = <4 1 IRQ_TYPE_EDGE_FALLING>; //PE1
		status = "okay";
	};
};

&tcon0 {
    pinctrl-names = "default";
    pinctrl-0 = <&lcd_rgb666_pins>;
    status = "disabled";
};

&tcon0_out {
    tcon0_out_lcd: endpoint@0 {
        reg = <0>;
        remote-endpoint = <&panel_input>;
        status = "disabled";
    };
};

&ohci0 {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"MIC1", "Mic",
		"Mic",  "HBIAS";
	status = "okay";
};

&cedarx {
    status = "okay";
};

&ion {
    status = "okay";
};

&pio {
    spi0_pins_a: spi0-pins {
        pins = "PC0", "PC1", "PC2", "PC3";
        function = "spi0";
    };

    uart0_pins_a: uart0-pins {
        pins = "PB8", "PB9";
        function = "uart0";
    };

    uart1_pins_a: uart1-pins {
        pins = "PE21", "PE22";
        function = "uart1";
    };

    uart2_pins_a: uart2-pins {
        pins = "PB0", "PB1", "PB2", "PB3";
        function = "uart2";
    };

    pwm0_pins_a: pwm0-pins {
        pins = "PB4";
        function = "pwm0";
    };

    pwm1_pins_a: pwm1-pins {
        pins = "PB5";
        function = "pwm1";
    };
};

&spi0 {
    pinctrl-names = "default";
    pinctrl-0 = <&spi0_pins_a>;
    status = "okay";

	flash: spinand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <50000000>;

		boot@0 {
			label = "boot";
			reg = <0x0000000 0x0100000>;
		};

		ubi0@100000 {
			label = "ubi0";
			reg = <0x0100000 0x0000000>;
		};

	};
};
